@model BankConfigurationPortal.Web.Models.Branch

<h2>@WebResources.Details</h2>

<div>
    <h4>@WebResources.Branch</h4>
    <hr />
    <p>
        <b>@Html.DisplayNameFor(model => model.NameEn):</b>
        @Html.DisplayFor(model => model.NameEn)
    </p>

    <p>
        <b>@Html.DisplayNameFor(model => model.NameAr):</b>
        @Html.DisplayFor(model => model.NameAr)
    </p>

    <p>
        <b>@Html.DisplayNameFor(model => model.Active)</b>
        @Html.DisplayFor(model => model.Active)
    </p>

