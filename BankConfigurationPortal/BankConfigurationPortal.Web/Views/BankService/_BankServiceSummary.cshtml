@model BankConfigurationPortal.Web.Models.BankService

@{ 
    string displayName = ((string) ViewData["language"] == BankConfigurationPortal.Web.Constants.Languages.ARABIC) ? Model.NameAr : Model.NameEn;
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@displayName</h3>
    </div>
    <div class="panel-body">
        @Html.ActionLink(WebResources.Edit, "Edit", new { bankServiceId = Model.BankServiceId }) |
        @Html.ActionLink(WebResources.Details, "Details", new { bankServiceId = Model.BankServiceId }) |
        @Html.ActionLink(WebResources.Delete, "Delete", new { bankServiceId = Model.BankServiceId })
    </div>
</div>
