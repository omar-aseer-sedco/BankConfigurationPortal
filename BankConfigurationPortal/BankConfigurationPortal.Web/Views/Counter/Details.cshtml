@model BankConfigurationPortal.Web.Models.Counter

@{
    ViewBag.Title = WebResources.Details;
}

<h2>@WebResources.Details</h2>

<div>
    <h4>@WebResources.Counter</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BranchId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BranchId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NameEn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameEn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NameAr)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameAr)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Services)
        </dt>

        <dd>
            @if (Model.Services.Count() > 0) {
                var last = Model.Services.Last();
                foreach (var item in Model.Services) {
                    @Html.DisplayFor(model => item.NameEn);
                    if (item != last) {
                        @Html.Encode(", ");
                    }
                }
            }
            else {
                @Html.Encode(WebResources.None);
            }
        </dd>
    </dl>
</div>
<div>
    <p><a class="btn btn-default" href=@Url.Action("Index", "CounterService", new { branchId = Model.BranchId, counterId = Model.CounterId })>@WebResources.AllocateServices &raquo;</a></p>
</div>
<p>
    @Html.ActionLink(WebResources.Edit, "Edit", new { branchId = Model.BranchId, counterId = Model.CounterId }) |
    @Html.ActionLink(WebResources.BackToList, "Index", new { branchId = Model.BranchId })
</p>
