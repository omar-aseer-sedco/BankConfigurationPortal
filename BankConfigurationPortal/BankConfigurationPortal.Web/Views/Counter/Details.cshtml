@model BankConfigurationPortal.Data.Models.Counter

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Counter</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BranchId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BranchId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NameEn)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameEn)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NameAr)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameAr)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Active)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Active)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Type)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Services)
        </dt>

        <dd>
            @if (Model.Services.Count() > 0) {
                var last = Model.Services.Last();
                foreach (var item in Model.Services) {
                    @item.NameEn;
                    if (item != last) {
                        @Html.Encode(", ");
                    }
                }
            }
            else {
                @Html.Encode("None");
            }
        </dd>
    </dl>
</div>
<div>
    <p><a class="btn btn-default" href=@string.Format($"/CounterService?branchId={Model.BranchId}&counterId={Model.CounterId}")>Allocate services &raquo;</a></p>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { branchId = Model.BranchId, counterId = Model.CounterId }) |
    @Html.ActionLink("Back to List", "Index", new { branchId = Model.BranchId })
</p>
