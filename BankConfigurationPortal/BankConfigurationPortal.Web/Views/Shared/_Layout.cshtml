@using BankConfigurationPortal.Web.Models;
@using System.Text.Json;

@{ 
    bool isRtl = false;
    var languageCookie = Context.Request.Cookies["language"];
    if (languageCookie != null) {
        if (languageCookie.Value == "ar") {
            isRtl = true;
        }
        else {
            isRtl = false;
        }
    }
    string username = null, bankName = null;
    var authCookie = Context.Request.Cookies[FormsAuthentication.FormsCookieName];
    if (authCookie != null) {
        SerializableUserData userData = JsonSerializer.Deserialize<SerializableUserData>(FormsAuthentication.Decrypt(authCookie.Value).UserData, JsonSerializerOptions.Default);
        username = userData.Username;
        bankName = userData.BankName;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @WebResources.ApplicationName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top"> @*TODO: figure out how to RTL this (maybe)*@
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(WebResources.ApplicationName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(WebResources.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(WebResources.Branches, "Index", "Branch")</li>
                    <li>@Html.ActionLink(WebResources.BankServices, "Index", "BankService")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (username == null) {
                        <li class="btn nav-item">@Html.ActionLink(WebResources.Login, "Login", "Account")</li>
                    }
                    else {
                        <li class="btn nav-item">@Html.ActionLink(WebResources.Logout, "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" dir="@(isRtl ? "rtl" : "auto")">
        @RenderBody()
        <hr />
        <footer>
            <p>@Html.ActionLink(WebResources.SwitchLanguage, "ToggleLanguage", "Home")</p>
            <p>&copy; @DateTime.Now.Year - @WebResources.CopyrightHolder</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
